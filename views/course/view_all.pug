extends ../layout

block content
    h3 Book
    table
        thead
            tr
                th Book Title
                th Author
                th Publisher
                th Genre
                th Total Pages
                th Book Cover
                th Description
                th
        tbody
            each book in books
                tr
                    td= book.name
                    td= book.author
                    td= book.publisher
                    td= book.genre
                    td= book.pages
                    td
                        img(scr=book.cover)
                    td= book.description

